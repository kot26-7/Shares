<% provide(:title, "Post New") %>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-column col-12 col-sm-12 col-md-12">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :post_image, "Photo" %>
      <%= f.file_field :post_image, class: "form-control" %>
    </div>
    <%= f.submit 'Post', class: "btn btn-primary", id: "submit-btn" %>
  <% end %>
</div>