<% provide(:title, "#{@post.user.username}'s post") %>

<div class="media col-9 col-sm-9 col-md-9 shadow-lg p-3 mb-5 bg-white rounded" style="margin: 0 auto">
  <%= link_to user_path(@post.user) do %>
    <%= image_tag @post.user.profile_image.to_s, class: "prof-img" %>
  <% end %>
  <div class="media-body">
    <h5 style="padding-left: 10px ">
    	<%= @post.user.username %>
			<i class="far fa-heart" style="padding-left: 15px"></i>
			<%= @post.favorites.count %>
    </h5>
    <%= image_tag @post.post_image.to_s, class: "col-10 col-sm-8 col-md-8", id: "post-show-img" %></br>
    <%= render 'posts/icons' %>
  </div>
</div>
