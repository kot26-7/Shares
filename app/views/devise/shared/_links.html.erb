<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= link_to user_facebook_omniauth_authorize_path do %>
    <div class="btn btn-info" id="submit-btn">
      <span class="omni-btn">
        <i class="fab fa-facebook fa-2x"></i>
      </span>
      <p class="omni-msg">Log in with Facebook</p>
    </div>
  <% end %>

  <%= link_to user_twitter_omniauth_authorize_path do %>
    <div class="btn btn-primary" id="submit-btn" style="margin-top: 15px">
      <span class="omni-btn">
        <i class="fab fa-twitter fa-2x"></i>
      </span>
      <p class="omni-msg">Log in with Twitter</p>
    </div>
  <% end %>
<% end %>
